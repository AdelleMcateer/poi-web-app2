<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/point" method="POST" >
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Enter Name</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="Name" name="name" placeholder="Name..." />
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Description</div>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="Description" name="description" placeholder="Description..." />
                    </div>
                </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="form-stacked-text">Latitude</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="form-stacked-text" type="number" name="longitude" step="any"  placeholder="Latitude" required>
                </div>
              </div>

              <div class="uk-margin">
                <label class="uk-form-label" for="form-stacked-text">Longitude</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="form-stacked-text" type="number" name="latitude" step="any"  placeholder="Longitude" required>
                </div>
              </div>
            </div>

            <div class="uk-margin">
                <div class="uk-margin uk-text-left">
                    <span>Please select a Categories</span>
                    <div class="uk-form-controls ">
                        {{#each categories}}
                            <label>
                                <input class="uk-radio" type="radio" name="category" value="{{name}}" /> {{name}}
                            </label>
                            <br />
                        {{/each}}
                    </div>

                </div>

              <div class=" uk-width-2-2@m">
                <div class="uk-margin">
                  <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add</button>
                </div>
              </div>


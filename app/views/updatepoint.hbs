<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> title-card title="Islands of Ireland" subTitle="Update a point..."}}
    {{> main-menu _id="updatePoint"}}
</div>


<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/updatePoint/{{point._id}}" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Update Point of Interest</label>
                    <div class="uk-form-controls">
                        <input class="{{point.name}}uk-input" id="form-stacked-text" type="text" name="name" placeholder="Island Name" />
                    </div>
                    <div class="uk-form-controls">
                        <input class="{{point.description}}uk-input" id="form-stacked-text" type="text" name="description" placeholder="Description" />
                    </div>
                </div>
              <div class="uk-margin">
                <label class="uk-form-label" for="form-stacked-text">Latitude</label>
                <div class="uk-form-controls">
                  <input class="{{point.latitude}}uk-input" id="form-stacked-text" type="number" name="longitude" step="any"  placeholder="Latitude" required>
                </div>
              </div>

              <div class="uk-margin">
                <label class="{{point.longitude}}uk-form-label" for="form-stacked-text">Longitude</label>
                <div class="uk-form-controls">
                  <input class="uk-input" id="form-stacked-text" type="number" name="latitude" step="any"  placeholder="Longitude" required>
                </div>
              </div>
              <div class="uk-margin">
                <div class="uk-margin uk-text-left">
                  <span>Please select a Category</span>
                  <div class="uk-form-controls ">
                    {{#each categories}}
                      <label>
                        <input class="uk-radio" type="radio" name="category" value="{{name}}" /> {{name}}
                      </label>
                      <br />
                    {{/each}}
                  </div>
                </div>
                <div class="uk-margin">
                  <div class="uk-margin uk-text-right">
                    <button class="submit uk-button uk-button-primary uk-button-large uk-width--1">Update Point</button>
                </div>
            </div>
            </div>
        </div>
    </form>
    {{> error}}
</div>

